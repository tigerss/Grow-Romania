<UserControl x:Class="bing.Forme.Meniu_Donations"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="600" d:DesignWidth="700">
    
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Rectangle Height="70" HorizontalAlignment="Left" Margin="550,0,0,0" Name="rectangle1" StrokeThickness="0" VerticalAlignment="Top" Width="150" RadiusX="25" RadiusY="25" >
            <Rectangle.Clip>
                <RectangleGeometry RadiusX="25" RadiusY="25" Rect="0,0,150,50" />
            </Rectangle.Clip>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.5, 0" EndPoint="0.5, 1">
                    <GradientStop Color="Yellow" Offset="0.0" />
                    <GradientStop Color="Red" Offset="0.9" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Height="551" HorizontalAlignment="Left" Margin="0,49,0,0" Name="border" VerticalAlignment="Top" Width="700" Stroke="Red" StrokeThickness="3" />
    </Grid>
</UserControl>
